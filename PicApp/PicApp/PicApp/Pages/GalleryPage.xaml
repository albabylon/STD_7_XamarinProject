<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PicApp.Pages.GalleryPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Галерея">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ScrollView Orientation="Vertical">
            <FlexLayout
                x:Name="galleryFlexLayout"
                AlignContent="Start"
                AlignItems="Start"
                BindableLayout.ItemsSource="{Binding Images}"
                JustifyContent="SpaceEvenly"
                Wrap="Wrap">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            x:Name="picframe"
                            Margin="2"
                            Padding="1"
                            CornerRadius="5"
                            HasShadow="True"
                            Style="{StaticResource ImageGalleryStyle}">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ItemTapCommand}"
                                    CommandParameter="{Binding .}"
                                    Tapped="OnTapped" />
                            </Frame.GestureRecognizers>

                            <Frame.Content>
                                <StackLayout>
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="120"
                                        Source="{Binding Url}"
                                        WidthRequest="120" />
                                    <Label
                                        FontSize="Small"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}" />
                                </StackLayout>
                            </Frame.Content>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>

        <StackLayout Grid.Row="1" Margin="5">
            <Button
                Clicked="OnClickedOpenImage"
                Style="{StaticResource Key=ButtonDefault}"
                Text="Открыть" />
            <Button
                Clicked="OnClickedDeleteImage"
                Style="{StaticResource Key=ButtonDefault}"
                Text="Удалить" />
        </StackLayout>
    </Grid>
</ContentPage>